<!DOCTYPE html>
<html>
<head>
  <title>Employee Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f1f5f9;
      font-family: 'Segoe UI', sans-serif;
    }

    .header {
      background-color: #0d6efd;
      color: white;
      padding: 20px;
      text-align: center;
      border-radius: 10px;
      margin-bottom: 30px;
    }

    .footer {
      background-color: #0d6efd;
      color: white;
      text-align: center;
      padding: 15px;
      margin-top: 40px;
      border-radius: 10px;
    }

    table th {
      background-color: #e2e6ea;
    }

    table tr:hover {
      background-color: #f8f9fa;
    }

    .btn {
      margin-right: 5px;
    }
  </style>
</head>
<body class="container py-4">

  <!-- Banner -->
  <div class="header">
    <h1 class="display-6">Employee Management System</h1>
    <p class="lead">View, Add, Edit, and Remove Employees</p>
  </div>

  <!-- Add Button -->
  <div class="text-end mb-3">
    <a href="/add" class="btn btn-success">+ Add New Employee</a>
  </div>

  <!-- Employee Table -->
  <table class="table table-hover table-bordered shadow-sm bg-white rounded">
    <thead class="table-light">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% employees.forEach(emp => { %>
        <tr>
          <td><%= emp.id %></td>
          <td><%= emp.name %></td>
          <td><%= emp.email %></td>
          <td><%= emp.phone %></td>
          <td>
            <a href="/edit/<%= emp.id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/delete/<%= emp.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Footer -->
  <div class="footer">
    <p>&copy; <%= new Date().getFullYear() %> Employee Management App | Built with Node.js + MySQL + Bootstrap | By Earbaj Md Saria</p>
  </div>

</body>
</html>
